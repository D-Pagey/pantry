{
  "name": "pantry",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=11.12.0",
    "npm": ">=6.10.1",
    "yarn": ">=1.15.2"
  },
  "dependencies": {
    "@storybook/addon-actions": "^5.1.11",
    "@storybook/addon-knobs": "5.1.11",
    "@storybook/addon-links": "^5.1.11",
    "@storybook/addons": "^5.1.11",
    "@storybook/react": "^5.1.11",
    "@testing-library/jest-dom": "4.1.0",
    "@testing-library/react": "9.1.3",
    "@testing-library/user-event": "7.0.0",
    "babel-plugin-jsx-remove-data-test-id": "2.0.0",
    "date-fns": "2.0.1",
    "firebase": "6.4.2",
    "formik": "1.5.8",
    "history": "4.9.0",
    "jest-styled-components": "6.3.3",
    "polished": "3.4.1",
    "prop-types": "15.7.2",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-firebase-hooks": "2.1.0",
    "react-router-dom": "5.0.1",
    "react-scripts": "3.1.1",
    "react-select": "3.0.4",
    "styled-components": "4.3.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom --verbose --coverage --no-cache --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "eslint ./src/**/*.js && stylelint ./src/**/*.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "8.1.0",
    "babel-eslint": "10.0.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "1.10.6",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "6.2.2",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-prettier": "6.1.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jest": "22.15.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-react": "7.14.3",
    "eslint-plugin-react-hooks": "2.0.1",
    "husky": "3.0.4",
    "lint-staged": ">=8",
    "prettier": "1.18.2",
    "require-context.macro": "1.1.1",
    "stylelint": "10.1.0",
    "stylelint-config-recommended": "2.2.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.8.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "babel": {
    "presets": [
      "react-app"
    ],
    "plugins": [
      [
        "babel-plugin-styled-components"
      ]
    ],
    "env": {
      "production": {
        "plugins": [
          "babel-plugin-jsx-remove-data-test-id"
        ]
      }
    }
  },
  "babelMacros": {
    "styledComponents": {
      "pure": true
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/serviceWorker.js",
      "!src/index.js",
      "!src/**/index.stories.js",
      "!src/setupTests.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 5,
        "branches": 5,
        "functions": 5,
        "lines": 5
      }
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lint",
      "eslint --fix",
      "git add"
    ],
    "*.{json,yml,md,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
