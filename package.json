{
    "name": "pantry",
    "version": "0.1.0",
    "private": true,
    "engines": {
        "node": ">=12.6.0",
        "npm": ">=6.10.1",
        "yarn": ">=1.15.2"
    },
    "dependencies": {
        "@storybook/addon-actions": "5.3.19",
        "@storybook/addon-knobs": "5.3.19",
        "@storybook/addon-links": "5.3.19",
        "@storybook/addons": "5.3.19",
        "@storybook/react": "5.3.19",
        "@testing-library/dom": "7.20.0",
        "@testing-library/jest-dom": "5.11.0",
        "@testing-library/react": "10.4.5",
        "@testing-library/user-event": "12.0.11",
        "array-sort": "1.0.0",
        "babel-plugin-jsx-remove-data-test-id": "2.1.3",
        "chroma-js": "2.1.0",
        "date-fns": "2.14.0",
        "firebase": "7.16.0",
        "formik": "2.1.4",
        "jest-styled-components": "7.0.2",
        "polished": "3.6.5",
        "rc-checkbox": "2.3.0",
        "react": "16.13.1",
        "react-burger-menu": "2.7.0",
        "react-datepicker": "3.1.3",
        "react-dom": "16.13.1",
        "react-firebase-hooks": "2.2.0",
        "react-firebaseui": "4.1.0",
        "react-router-dom": "5.2.0",
        "react-scripts": "3.4.1",
        "react-select": "3.1.0",
        "react-spinners": "0.9.0",
        "react-toastify": "6.0.8",
        "styled-components": "5.1.1",
        "title-case": "3.0.2",
        "typescript": "3.9.6"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --env=jest-environment-jsdom-sixteen --verbose --coverage --no-cache --watchAll=false",
        "test:watch": "react-scripts test --env=jest-environment-jsdom-sixteen --verbose",
        "eject": "react-scripts eject",
        "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix && stylelint ./src/**/*.js",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/core": "7.10.4",
        "@commitlint/cli": "9.0.1",
        "@commitlint/config-conventional": "9.0.1",
        "@storybook/addon-console": "1.2.1",
        "@storybook/preset-create-react-app": "3.1.4",
        "@types/array-sort": "1.0.0",
        "@types/jest": "26.0.4",
        "@types/node": "14.0.22",
        "@types/react": "16.9.42",
        "@types/react-burger-menu": "2.6.1",
        "@types/react-color": "3.0.4",
        "@types/react-datepicker": "3.0.2",
        "@types/react-dom": "16.9.8",
        "@types/react-router-dom": "5.1.5",
        "@types/react-select": "3.0.14",
        "@typescript-eslint/parser": "3.6.0",
        "babel-eslint": "10.1.0",
        "babel-loader": "8.1.0",
        "babel-plugin-styled-components": "1.10.7",
        "cz-conventional-changelog": "3.2.0",
        "eslint-config-airbnb-typescript": "8.0.2",
        "eslint-config-prettier": "6.11.0",
        "eslint-plugin-import": "2.22.0",
        "eslint-plugin-jest": "23.18.0",
        "eslint-plugin-jsx-a11y": "6.3.1",
        "eslint-plugin-react": "7.20.3",
        "eslint-plugin-react-hooks": "4.0.7",
        "husky": "4.2.5",
        "jest-environment-jsdom-sixteen": "1.0.3",
        "lint-staged": "10.2.11",
        "prettier": "2.0.5",
        "react-select-event": "4.1.4",
        "require-context.macro": "1.2.2",
        "stylelint": "13.6.1",
        "stylelint-config-recommended": "3.0.0",
        "stylelint-config-styled-components": "0.1.1",
        "stylelint-processor-styled-components": "1.10.0"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged",
            "pre-push": "yarn test"
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "babel": {
        "presets": [
            "react-app"
        ],
        "plugins": [
            [
                "babel-plugin-styled-components"
            ],
            "emotion"
        ],
        "env": {
            "production": {
                "plugins": [
                    "babel-plugin-jsx-remove-data-test-id"
                ]
            }
        }
    },
    "babelMacros": {
        "styledComponents": {
            "pure": true
        }
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.js",
            "src/**/*.tsx",
            "src/**/*.ts",
            "!src/serviceWorker.js",
            "!src/index.js",
            "!src/react-app-env.d.ts",
            "!src/**/index.stories.tsx",
            "!src/test-utils.tsx",
            "!src/custom.d.ts"
        ],
        "coverageThreshold": {
            "global": {
                "statements": 5,
                "branches": 5,
                "functions": 5,
                "lines": 5
            }
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "yarn lint"
        ],
        "*.{json,yml,md,html}": [
            "prettier --write"
        ]
    }
}
