{
    "name": "pantry",
    "version": "0.1.0",
    "private": true,
    "engines": {
        "node": ">=12.6.0",
        "npm": ">=6.10.1",
        "yarn": ">=1.15.2"
    },
    "dependencies": {
        "@storybook/addons": "6.1.15",
        "@storybook/react": "6.1.15",
        "@testing-library/dom": "7.29.4",
        "@testing-library/jest-dom": "5.11.9",
        "@testing-library/react": "11.2.3",
        "@testing-library/user-event": "12.6.2",
        "babel-plugin-jsx-remove-data-test-id": "2.1.3",
        "date-fns": "2.16.1",
        "firebase": "8.2.5",
        "formik": "2.2.6",
        "jest-styled-components": "7.0.3",
        "polished": "4.1.0",
        "react": "17.0.1",
        "react-burger-menu": "3.0.3",
        "react-datepicker": "3.4.1",
        "react-dom": "17.0.1",
        "react-modal": "3.12.1",
        "react-responsive": "8.2.0",
        "react-router-dom": "5.2.0",
        "react-scripts": "4.0.1",
        "react-select": "4.0.2",
        "react-spinners": "0.10.4",
        "react-toastify": "7.0.2",
        "styled-components": "5.2.1",
        "title-case": "3.0.3",
        "typescript": "4.1.3",
        "uuid": "8.3.2"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --env=jest-environment-jsdom-sixteen --verbose --coverage --no-cache --watchAll=false",
        "test:watch": "react-scripts test --env=jest-environment-jsdom-sixteen --verbose",
        "eject": "react-scripts eject",
        "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/core": "7.12.10",
        "@commitlint/cli": "11.0.0",
        "@commitlint/config-conventional": "11.0.0",
        "@storybook/addon-essentials": "6.1.15",
        "@types/jest": "26.0.20",
        "@types/node": "14.14.22",
        "@types/react": "17.0.0",
        "@types/react-burger-menu": "2.6.2",
        "@types/react-color": "3.0.4",
        "@types/react-datepicker": "3.1.3",
        "@types/react-dom": "17.0.0",
        "@types/react-modal": "3.10.6",
        "@types/react-responsive": "8.0.2",
        "@types/react-router-dom": "5.1.7",
        "@types/react-select": "4.0.10",
        "@types/uuid": "8.3.0",
        "@typescript-eslint/eslint-plugin": "4.14.1",
        "@typescript-eslint/parser": "4.14.1",
        "babel-loader": "8.2.2",
        "babel-plugin-styled-components": "1.12.0",
        "cz-conventional-changelog": "3.3.0",
        "eslint-config-prettier": "7.2.0",
        "eslint-plugin-jest-dom": "3.6.5",
        "eslint-plugin-prettier": "3.3.1",
        "eslint-plugin-react": "7.22.0",
        "eslint-plugin-testing-library": "3.10.1",
        "husky": "4.3.8",
        "jest-environment-jsdom-sixteen": "1.0.3",
        "lint-staged": "10.5.3",
        "mockdate": "3.0.2",
        "prettier": "2.2.1",
        "react-select-event": "5.1.0",
        "require-context.macro": "1.2.2"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged",
            "pre-push": "yarn test"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "yarn lint"
        ],
        "*.{json,yml,md,html}": [
            "prettier --write"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "babel": {
        "presets": [
            "react-app"
        ],
        "plugins": [
            [
                "babel-plugin-styled-components"
            ],
            "emotion"
        ],
        "env": {
            "production": {
                "plugins": [
                    "babel-plugin-jsx-remove-data-test-id"
                ]
            }
        }
    },
    "babelMacros": {
        "styledComponents": {
            "pure": true
        }
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,ts,tsx}",
            "!src/components/ErrorBoundary/*",
            "!src/serviceWorker.js",
            "!src/index.js",
            "!src/services/*",
            "!src/react-app-env.d.ts",
            "!src/**/index.stories.tsx",
            "!src/test-utils.tsx",
            "!src/custom.d.ts"
        ],
        "coverageThreshold": {
            "global": {
                "statements": 75,
                "branches": 69,
                "functions": 75,
                "lines": 75
            }
        }
    }
}
