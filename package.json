{
  "name": "pantry",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=10.13.0",
    "npm": ">=6.10.1",
    "yarn": ">=1.15.2"
  },
  "dependencies": {
    "@storybook/addon-actions": "5.3.7",
    "@storybook/addon-knobs": "5.3.7",
    "@storybook/addon-links": "5.3.7",
    "@storybook/addons": "5.3.7",
    "@storybook/react": "5.3.7",
    "@testing-library/dom": "6.11.0",
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "9.4.0",
    "@testing-library/user-event": "8.0.3",
    "@types/jest": "24.9.0",
    "@types/node": "13.1.8",
    "@types/prop-types": "15.7.3",
    "@types/react": "16.9.17",
    "@types/react-dom": "16.9.4",
    "babel-plugin-jsx-remove-data-test-id": "2.1.3",
    "date-fns": "2.9.0",
    "firebase": "7.7.0",
    "formik": "2.1.2",
    "history": "4.10.1",
    "jest-styled-components": "6.3.4",
    "polished": "3.4.2",
    "prop-types": "15.7.2",
    "react": "16.12.0",
    "react-burger-menu": "2.6.13",
    "react-dom": "16.12.0",
    "react-firebase-hooks": "2.1.1",
    "react-firebaseui": "4.1.0",
    "react-router-dom": "5.1.2",
    "react-scripts": "3.3.0",
    "react-select": "3.0.8",
    "react-spinners": "0.8.0",
    "react-table": "6.11.5",
    "styled-components": "4.4.1",
    "title-case": "3.0.2",
    "typescript": "3.7.5",
    "uuid": "3.4.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom --verbose --coverage --no-cache --watchAll=false",
    "test:watch": "react-scripts test --env=jsdom --verbose",
    "eject": "react-scripts eject",
    "lint": "eslint ./src/**/*.js && eslint ./src/**/*.tsx && stylelint ./src/**/*.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.8.3",
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@types/react-burger-menu": "2.6.0",
    "@types/react-router-dom": "5.1.3",
    "@types/react-select": "3.0.10",
    "@types/react-table": "6.8.5",
    "@typescript-eslint/eslint-plugin": "2.16.0",
    "@typescript-eslint/parser": "2.16.0",
    "babel-eslint": "10.0.3",
    "babel-loader": "8.0.6",
    "babel-plugin-styled-components": "1.10.6",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-prettier": "6.9.0",
    "eslint-plugin-import": "2.20.0",
    "eslint-plugin-jest": "23.6.0",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.18.0",
    "eslint-plugin-react-hooks": "2.3.0",
    "husky": "4.0.10",
    "lint-staged": ">=9.5.0",
    "prettier": "1.19.1",
    "require-context.macro": "1.2.2",
    "stylelint": "13.0.0",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.9.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "babel": {
    "presets": [
      "react-app"
    ],
    "plugins": [
      [
        "babel-plugin-styled-components"
      ],
      "emotion"
    ],
    "env": {
      "production": {
        "plugins": [
          "babel-plugin-jsx-remove-data-test-id"
        ]
      }
    }
  },
  "babelMacros": {
    "styledComponents": {
      "pure": true
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "src/**/*.tsx",
      "src/**/*.ts",
      "!src/serviceWorker.js",
      "!src/index.js",
      "!src/react-app-env.d.ts",
      "!src/**/index.stories.js",
      "!src/setupTests.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 5,
        "branches": 5,
        "functions": 5,
        "lines": 5
      }
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lint",
      "eslint --fix",
      "git add"
    ],
    "*.{json,yml,md,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
