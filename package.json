{
    "name": "pantry",
    "version": "0.1.0",
    "private": true,
    "engines": {
        "node": ">=10.13.0",
        "npm": ">=6.10.1",
        "yarn": ">=1.15.2"
    },
    "dependencies": {
        "@storybook/addon-actions": "5.3.18",
        "@storybook/addon-knobs": "5.3.18",
        "@storybook/addon-links": "5.3.18",
        "@storybook/addons": "5.3.18",
        "@storybook/react": "5.3.18",
        "@testing-library/dom": "7.2.0",
        "@testing-library/jest-dom": "5.3.0",
        "@testing-library/react": "10.0.2",
        "@testing-library/user-event": "10.0.1",
        "array-sort": "1.0.0",
        "babel-plugin-jsx-remove-data-test-id": "2.1.3",
        "date-fns": "2.11.1",
        "firebase": "7.13.1",
        "formik": "2.1.4",
        "history": "4.10.1",
        "jest-styled-components": "7.0.0",
        "polished": "3.5.1",
        "prop-types": "15.7.2",
        "react": "16.13.1",
        "react-burger-menu": "2.6.13",
        "react-dom": "16.13.1",
        "react-firebase-hooks": "2.1.1",
        "react-firebaseui": "4.1.0",
        "react-router-dom": "5.1.2",
        "react-scripts": "3.4.1",
        "react-select": "3.1.0",
        "react-spinners": "0.8.1",
        "react-toastify": "5.5.0",
        "styled-components": "5.0.1",
        "title-case": "3.0.2",
        "typescript": "3.8.3",
        "uuid": "7.0.3"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --env=jsdom --verbose --coverage --no-cache --watchAll=false",
        "test:watch": "react-scripts test --env=jsdom --verbose",
        "eject": "react-scripts eject",
        "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix && stylelint ./src/**/*.js",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/core": "7.9.0",
        "@commitlint/cli": "8.3.5",
        "@commitlint/config-conventional": "8.3.4",
        "@types/array-sort": "1.0.0",
        "@types/jest": "25.1.4",
        "@types/node": "13.9.8",
        "@types/prop-types": "15.7.3",
        "@types/react": "16.9.31",
        "@types/react-burger-menu": "2.6.1",
        "@types/react-color": "3.0.1",
        "@types/react-dom": "16.9.6",
        "@types/react-router-dom": "5.1.3",
        "@types/react-select": "3.0.11",
        "@typescript-eslint/parser": "2.26.0",
        "babel-eslint": "10.1.0",
        "babel-loader": "8.1.0",
        "babel-plugin-styled-components": "1.10.7",
        "cz-conventional-changelog": "3.1.0",
        "eslint-config-airbnb-typescript": "7.2.0",
        "eslint-config-prettier": "6.10.1",
        "eslint-plugin-import": "2.20.2",
        "eslint-plugin-jest": "23.8.2",
        "eslint-plugin-jsx-a11y": "6.2.3",
        "eslint-plugin-react": "7.19.0",
        "eslint-plugin-react-hooks": "3.0.0",
        "husky": "4.2.3",
        "lint-staged": ">=10.1.1",
        "prettier": "2.0.2",
        "require-context.macro": "1.2.2",
        "stylelint": "13.2.1",
        "stylelint-config-recommended": "3.0.0",
        "stylelint-config-styled-components": "0.1.1",
        "stylelint-processor-styled-components": "1.10.0"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged",
            "pre-push": "yarn test"
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "babel": {
        "presets": [
            "react-app"
        ],
        "plugins": [
            [
                "babel-plugin-styled-components"
            ],
            "emotion"
        ],
        "env": {
            "production": {
                "plugins": [
                    "babel-plugin-jsx-remove-data-test-id"
                ]
            }
        }
    },
    "babelMacros": {
        "styledComponents": {
            "pure": true
        }
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.js",
            "src/**/*.tsx",
            "src/**/*.ts",
            "!src/serviceWorker.js",
            "!src/index.js",
            "!src/react-app-env.d.ts",
            "!src/**/index.stories.js",
            "!src/setupTests.js",
            "!src/custom.d.ts"
        ],
        "coverageThreshold": {
            "global": {
                "statements": 5,
                "branches": 5,
                "functions": 5,
                "lines": 5
            }
        }
    },
    "lint-staged": {
        "*.js": [
            "yarn lint"
        ],
        "*.{json,yml,md,html}": [
            "prettier --write"
        ]
    }
}
